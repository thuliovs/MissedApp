<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Background escuro fixo -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_dark"/>

    <!-- Mapa ocupando toda a tela -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/MapFragmentStyle" />

    <!-- Loading Overlay com animação -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_dark"
        android:clickable="true"
        android:focusable="true">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/loading_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:indicatorColor="@color/accent"
            app:indicatorSize="64dp"
            app:trackCornerRadius="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="loading map..."
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/loading_indicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Container para os elementos de UI -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <!-- Container da barra superior -->
        <LinearLayout
            android:id="@+id/top_bar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:alpha="0"
            android:visibility="invisible"
            android:elevation="1dp"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Barra de pesquisa -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/search_bar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/background_dark"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/accent_tertiary"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/text_primary"
                        android:layout_marginEnd="8dp"/>

                    <EditText
                        android:id="@+id/search_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="search destination"
                        android:textColorHint="@color/text_secondary"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_regular"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLines="1"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Botão de localização -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/my_location_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardBackgroundColor="@color/background_dark"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/accent_tertiary"
                app:strokeWidth="1dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_my_location"
                    app:tint="@color/text_primary"/>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Card de sugestões (atrás da barra de pesquisa) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/suggestions_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginEnd="78dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:alpha="0"
            app:cardBackgroundColor="@color/surface_dark"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/accent_tertiary"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Espaço vazio para a barra de pesquisa -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="0dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/suggestions_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:clipToPadding="false"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Card com instruções (agora com marginBottom ajustável) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/instruction_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="32dp"
            android:alpha="0"
            android:visibility="invisible"
            app:cardBackgroundColor="@color/background_dark"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:strokeColor="@color/accent_tertiary"
            app:strokeWidth="1dp"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="tap or search to select your destination"
                    android:textAlignment="center"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="4dp">

                    <!-- Botão Confirm (inicialmente invisível) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_confirm_location"
                        android:layout_width="0dp"
                        android:layout_weight="0"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:text=""
                        android:textColor="@color/background_dark"
                        android:visibility="gone"
                        android:alpha="0"
                        app:backgroundTint="@color/accent"
                        app:cornerRadius="24dp" />

                    <!-- Botão Cancel (inicialmente ocupando toda a largura) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_back"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="4dp"
                        app:backgroundTint="@color/surface_dark"
                        app:strokeColor="@color/accent"
                        app:strokeWidth="1dp"
                        app:cornerRadius="24dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 